---
plugin: aws_ec2
regions:
  - eu-central-1
filters:
  tag:prj_id: {{ prj_id }}
{% if not prj_clear %}
  instance-state-name: ["running"]
  tag:suite: {{ suite }}
{% endif %}
   

# keyed_groups may be used to create custom groups
#leading_separator: False
strict: False
keyed_groups:
  - prefix: ""
    separator: ""
    key: tags.prj_id
    
  - prefix: ""
    separator: ""
    key: tags.suite

  - prefix: ""
    separator: ""
    key: tags.exp_name
  
  - prefix: ""
    separator: ""
    key: tags.host_type
  
  - prefix: ""
    separator: ""
    key: tags.exp_role

  - prefix: ""
    separator: ""
    key: tags.check_status


