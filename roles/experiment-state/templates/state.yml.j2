---

exp_name: {{ exp_name }}
exp_id: {{ exp_id }}

n_repetitions: {{ experiment.n_repetitions }}

common_roles:
  {{ experiment.common_roles | to_nice_yaml(indent=2) | indent(2) }}

host_types:
  {{ experiment.host_types | to_nice_yaml(indent=2) | indent(2) }}

exp_job_ids: {{ exp_job_ids | default([]) }}
exp_job_ids_unfinished: {{ exp_job_ids_unfinished | default([]) }} # pending + running
exp_job_ids_pending: {{ exp_job_ids_pending | default([]) }}
exp_job_ids_running: {{ exp_job_ids_running | default([]) }}

exp_runs_ext:
{{ exp_runs_ext | to_nice_yaml(indent=2) }}
